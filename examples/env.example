# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=authkit
DB_SSLMODE=disable

# Server Configuration
PORT=3000
READ_TIMEOUT_SECONDS=10
WRITE_TIMEOUT_SECONDS=10

# Cookie Configuration
# COOKIE_SECURE: Cookie Secure flag (true = HTTPS only, false = allow HTTP for dev)
# Set false khi test trên localhost HTTP, set true cho production HTTPS
COOKIE_SECURE=false

# JWT Configuration
# JWT_EXPIRATION_HOURS: Thời gian hết hạn của access token (mặc định: 24 giờ)
# Để test nhanh: 30 giây = 0.00833 giờ
JWT_EXPIRATION_HOURS=0.00833

# REFRESH_TOKEN_EXPIRATION_DAYS: Thời gian hết hạn của refresh token (mặc định: 7 ngày)
# Để test nhanh: 60 giây = 0.000694 ngày
REFRESH_TOKEN_EXPIRATION_DAYS=0.000694

# JWT Secret Key
JWT_SECRET=your-secret-key-change-in-production

# Password Configuration
PASSWORD_MIN_LENGTH=6
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL_CHAR=false
PASSWORD_MIN_SPECIAL_CHARS=0

# Service Name (for microservice architecture, max 20 chars, empty = single app mode)
SERVICE_NAME=

# Database Reset (set to true to reset database on startup)
RESET_DB=false

